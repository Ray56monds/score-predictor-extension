{
  "manifest_version": 3,
  "name": "Over 1.5 Goals Finder - Standalone",
  "version": "2.0",
  "description": "Standalone extension that fetches Over 1.5 goals odds from API",
  "permissions": ["storage", "notifications"],
  "action": {
    "default_popup": "popup-standalone.html",
    "default_icon": "icons/icon48.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
